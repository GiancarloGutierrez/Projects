@model UserValidationLogin;
@using cs3750LMS.Models.validation; 
@{
    ViewData["Title"] = "Login";
    Errors failed;
    if (ViewData["LogErr"] != null)
    {
        failed = (Errors)ViewData["LogErr"];
    }
    else
    {
        failed = new Errors();
        failed.LoginError = "";
    }
}


<div class="container-fluid hero flex-grow-1">
    <div class="container">
        <h1 class="display-4 text-center mt-3">@ViewData["Title"]</h1>
        <div>
            <p class="text-center">@failed.LoginError</p>
        </div>
        @section Scripts{
            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        }
        <form asp-action="Login" method="post" class="w-75 mx-auto mt-5">
            <div asp-validation-summary="ModelOnly"></div> <!--ModelOnly mode allows errors to be show per input box-->

            <div class="form-group row">
                <div class="col-sm-12 col-lg-2 d-flex align-items-center justify-content-sm-center justify-content-lg-end mb-sm-3 mb-lg-0 p-0">
                    <label asp-for="Email" class="control-label mb-0 text-sm-center text-lg-end">Email</label>
                </div>
                <div class="col-sm-12 col-lg-10">
                    <input type="email" asp-for="Email" class="form-control" required />
                </div>
                <div class="col-sm-12">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-12 col-lg-2 d-flex align-items-center justify-content-sm-center justify-content-lg-end mb-sm-3 mb-lg-0 p-0">
                    <label asp-for="Password" class="control-label mb-0 text-sm-center text-lg-end">Password</label>
                </div>
                <div class="col-sm-12 col-lg-10">
                    <input type="password" asp-for="Password" name="Password" class="form-control" required />
                </div>
                <div class="col-sm-12">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>


            <div class="form-group text-center mt-sm-3 mt-lg-1">
                <button type="submit" value="Login" class="btn btn-primary mx-2"><i class="bi bi-key"></i> Login</button>
                <a asp-action="SignUp" class="btn btn-warning"><i class="bi bi-person-plus"></i> Sign Up</a>
            </div>

        </form>
    </div>
</div>
